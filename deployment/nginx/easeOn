server {
    server_name  www.easeon.in easeon.in;
    location = /favicon.ico { access_log off; log_not_found off; }  
    location /django_static/ {
        root /home/easeon/easeOnProject/easeOn;
    }
    location /backend/{
        include proxy_params;
        proxy_read_timeout 300s;
        proxy_connect_timeout 75s;
        proxy_pass http://unix:/run/easeOn.sock;
    }
    location /{
        root /home/easeon/client;
        index index.html;
        try_files $uri /index.html;
    }
    

    listen 443 ssl; # managed by Certbot
    ssl_certificate /etc/letsencrypt/live/www.easeon.in/fullchain.pem; # managed by Certbot
    ssl_certificate_key /etc/letsencrypt/live/www.easeon.in/privkey.pem; # managed by Certbot
    include /etc/letsencrypt/options-ssl-nginx.conf; # managed by Certbot
    ssl_dhparam /etc/letsencrypt/ssl-dhparams.pem; # managed by Certbot

}
server {
    if ($host = www.easeon.in) {
        return 301 https://$host$request_uri;
    } # managed by Certbot


    listen 80;
    server_name  www.easeon.in easeon.in;
    return 404; # managed by Certbot


}
